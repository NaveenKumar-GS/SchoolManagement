@model Schoolmanagementn.Department

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Department</h4>
    <hr />
    <div style="margin-left: 200px; margin-right: 350px;" class="shadow">
        <div>
            <h2 style="font-weight: 800; text-align: center">
                <br />

                Department
                Details
            </h2>
            <hr />
            <div >
                <dl class="dl-horizontal">
                    <dt>
                        Department :
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DepartmentName)
                    </dd>

                </dl>
            </div>
            <div class="form-actions no-color" style="text-align: center">

                <a href="@Url.Action("Edit", "Departments", new { id = Model.DeptId })" class="btn btn-primary font-weight-bold btn-pill">Edit</a>
                <a href="@Url.Action("Index", "Departments")" class="btn btn-dark font-weight-bold btn-pill">Back</a>

            </div>
            <br />

        </div>
    </div>
   </div>
